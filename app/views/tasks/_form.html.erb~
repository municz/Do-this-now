<%= form_for(@task) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% if @task.id %>
    <div class="field">
      <%= f.label :priority %>
      <%= f.number_field :priority %>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :done %>
    <%= f.check_box :done %>
  </div>
  <div class="actions">
    <%= f.submit, :class => "btn-primary" %>
  </div>
<% end %>
